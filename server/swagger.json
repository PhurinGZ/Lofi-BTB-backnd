    "paths": {
      "/api/login": {
        "post": {
          "summary": "Authenticate user",
          "tags": ["Authentication"],
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "email": { "type": "string" },
                    "password": { "type": "string" }
                  },
                  "required": ["email", "password"]
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Successful authentication",
              "content": {
                "application/json": {
                  "example": {
                    "data": "<JWT_TOKEN>",
                    "message": "Signing in please wait..."
                  }
                }
              }
            },
            "400": {
              "description": "Invalid email or password",
              "content": {
                "application/json": {
                  "example": { "message": "Invalid email or password" }
                }
              }
            }
          }
        }
      },
      "/api/playlists": {
        "post": {
          "summary": "Create a new playlist",
          "tags": ["Playlists"],
          "security": [{ "BearerAuth": [] }],
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/PlayListInput" }
